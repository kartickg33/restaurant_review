<% layout('layouts/boilerplate') %> 
<link rel="stylesheet" href="stylesheets/login.css">
    <div class="container d-flex justify-content-center align-items-center mt-5">
        <div class="row">
            <div class="col">
                <div class="">
                    <div class="card-body">
                        <h3 class="card-title mb-4">Login</h3>
                        <form action="/login" method="POST" class="validated-form" novalidate>
                            <div class="mb-4">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" autofocus required>
                                <div class="valid-feedback"> Spot On!</div>
                                <div class="invalid-feedback">Please enter Username</div>
                            </div>
    
                            <div class="mb-4">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                                <div class="valid-feedback">
                                    Spot On!
                                </div>
                                <div class="invalid-feedback">Please enter Password</div>
                            </div>
                            
                            <div class="d-grip gap-2">
                                <button class="btn btn-primary bg-dark" style="border:2px solid white; width: 345px; margin-top: 15px;">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>